#!/bin/bash -eu

WASND_INSTALL_ROOT=/opt/IBM/WebSphere/AppServer
WASND_PROFILE_NAME=${OPENSHIFT_GEAR_UUID}

echo WAS ND profile cartridge setup started...

echo Checking user id:

id

mkdir -p ${OPENSHIFT_HOMEDIR}/.m2

echo Calling mkdir ${OPENSHIFT_WASND_DIR}profiles

mkdir ${OPENSHIFT_WASND_DIR}profiles

echo Calling ${WASND_INSTALL_ROOT}/bin/manageprofiles.sh -create -debug -profileName ${WASND_PROFILE_NAME} -profilePath ${OPENSHIFT_WASND_DIR}profiles/${WASND_PROFILE_NAME} -hostName ${OPENSHIFT_APP_DNS}

${WASND_INSTALL_ROOT}/bin/manageprofiles.sh -create -debug -profileName ${WASND_PROFILE_NAME} -profilePath ${OPENSHIFT_WASND_DIR}profiles/${WASND_PROFILE_NAME} -hostName ${OPENSHIFT_APP_DNS}

echo WAS ND profile cartridge setup finished with status $?